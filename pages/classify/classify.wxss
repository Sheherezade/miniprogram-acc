/* 推荐歌曲 */
.recommendContainer{
  padding: 20rpx;
}

/* 内容推荐区 */
.recommendScroll{
  display: flex;
  height: 270rpx;
}
.scrollItem{
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 24rpx;
  /* 多行文本溢出隐藏 省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;/*设置纵向对齐*/
  -webkit-line-clamp: 2;/*设置盒子行数*/
}